type MutationAPIs {
    saveCompany(company: CompanyInput): Company
}

# the company object
input CompanyInput {
    id: ID
    # the company name
    name: String
    # the email address
    emailAddress: String
    # the phone number
    phoneNumber: String
    description: String

    url: String
    tweet: TweetInput

    #date: date
}

#tweet composition
input TweetInput {
    id: ID,
    text: String
}